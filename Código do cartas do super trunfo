#include <stdio.h>

int main() {
    // Declaração das variáveis da Carta 1
    char estado1[50] = "São Paulo";
    char cidade1[50] = "São Paulo";
    char codigo1[9] = "01";
    float populacao1 = 12325232.0;
    float area1 = 1521.10;
    float pib1 = 829.0;
    int pontos_turisticos1 = 10;

    // Declaração das variáveis da Carta 2
    char estado2[50] = "Distrito Federal";
    char cidade2[50] = "Brasília";
    char codigo2[9] = "06";
    float populacao2 = 2982818.0;
    float area2 = 5760.78;
    float pib2 = 829.0;
    int pontos_turisticos2 = 6;

    // Impressão das cartas
    printf("\n--- CARTA 1 ---\n");
    printf("Estado: %s\n", estado1);
    printf("Cidade: %s\n", cidade1);
    printf("População: %.0f\n", populacao1);
    printf("Área: %.2f km²\n", area1);
    printf("PIB: %.2f bilhões\n", pib1);
    printf("Pontos turísticos: %d\n", pontos_turisticos1);
    printf("Código: %s\n", codigo1);

    printf("\n--- CARTA 2 ---\n");
    printf("Estado: %s\n", estado2);
    printf("Cidade: %s\n", cidade2);
    printf("População: %.0f\n", populacao2);
    printf("Área: %.2f km²\n", area2);
    printf("PIB: %.2f bilhões\n", pib2);
    printf("Pontos turísticos: %d\n", pontos_turisticos2);
    printf("Código: %s\n", codigo2);

    // Comparações
    printf("\n--- COMPARAÇÃO DOS ATRIBUTOS ---\n");

    // População
    printf("População: %d\n", populacao1 > populacao2 ? 1 : 0);

    // Área
    printf("Área: %d\n", area1 > area2 ? 1 : 0);

    // PIB
    printf("PIB: %d\n", pib1 > pib2 ? 1 : 0);

    // Pontos turísticos
    printf("Pontos turísticos: %d\n", pontos_turisticos1 > pontos_turisticos2 ? 1 : 0);

    // Densidade populacional
    float densidade1 = populacao1 / area1;
    float densidade2 = populacao2 / area2;
    printf("Densidade Populacional (menor vence): %d\n", densidade1 < densidade2 ? 1 : 0);

    // Cálculo do Super Poder
    float super_poder1 = populacao1 + area1 + pib1 + pontos_turisticos1 + (1.0 / densidade1);
    float super_poder2 = populacao2 + area2 + pib2 + pontos_turisticos2 + (1.0 / densidade2);
    printf("Super Poder: %d\n", super_poder1 > super_poder2 ? 1 : 0);

    // Mostrar valores dos Super Poderes
    printf("\n--- SUPER PODERES ---\n");
    printf("Carta 1: %.2f\n", super_poder1);
    printf("Carta 2: %.2f\n", super_poder2);

    return 0;
}
